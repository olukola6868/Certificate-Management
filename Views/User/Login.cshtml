@model CertificateManagement.Dtos.LoginUserRequestModel

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div class="my-container">
        <h1>Login</h1>
        <form asp-action="Login">
            @if (@ViewBag.error != null)
            {
                <h4>@ViewBag.error</h4>
            }
            <label asp-for="EmailAddress">Email:</label>
            <input asp-for="EmailAddress" id="username" name="EmailAddress" placeholder="Enter your Email Address"
                required>
            <label asp-for="Password">Password:</label>
            <input type="password" asp-for="Password" id="password" name="password" placeholder="Enter your password"
                required>
            <button type="submit" value="submit">Login</button>
        </form>
    </div>
</body>

</html>