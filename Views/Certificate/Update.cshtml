@model CertificateManagement.Dtos.UpdateCertificateRequestModel

@if (ViewData != null)
{
    <h4>@TempData["Success"]</h4>
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <h1 class="tagcolor">Update</h1>
        <p class="tagcolor">Please fill in this form to update a certificate.</p>
        <hr class="tagcolor">

        <div>
            <form asp-action="Update" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="Comment" class="control-label"></label>
                        <input asp-for="Comment" class="form-control">
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="CertificatePreference" class="control-label"></label>
                        <input asp-for="CertificatePreference" class="form-control">
                        <span asp-validation-for="CertificatePreference" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="Date" class="control-label"></label>
                        <input asp-for="Date" type="date" placeholder="Enter the certfcate date" class="form-control">
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="form-group col-sm-6">
                        <label for="Choose fle">Signature</label>
                        <input type="file" name="Signature" id="formFile" />
                    </div><br>

                    <div class="form-group ">
                        <input href="#myModal" type="submit" value="Update"class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                    </div>
                </div>
            </form>
        </div>

    </div>
</body>
</html>